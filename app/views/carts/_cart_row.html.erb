
  <div class="row prozivodi">
      <%= form_for order_item, remote: true do |f| %>

      <div class="col-md-4">

        <img class="img-responsive slikica" src="<%= product.imgurl %>" alt="">
      </div>


      <div class="col-md-4">
        <br/> <br/>
        <p> Model: <%= product.name %></p>
        <p>  Velicina: <br/></p>
        <p>  ID: <%= product.id %></p>
      </div>


      <div class="col-md-4 text-right">
        <!-- <p class="text-right">Cijena: <span style="color: green"><%=order_item.unit_price %></span></p> -->
        <p class="">Cijena:<br/> <span style="color: black; font-weight: bold; font-size: 22px;"><%= order_item.total_price %></span></p>

          <span id="udesno"><%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %></span>

            <div class="btn-group">
              <%= f.submit "Dodaj", class: "btn korpa_button" %>
              <%= link_to "Ukloni", order_item, { data: { confirm: "Jeste li sigurni da zelite proizvod '#{order_item.product.name}' ukloniti iz Vase korpe?" }, method: :delete, remote: true, class: "btn kupi_button" } %>
            </div>
          </div>

      <% end %>
  </div>


<style>
#udesno{
float: right !important;
}
.row{
  margin-top: 10px;
  margin-bottom: 30px;
}

.form-control{
  width: auto;
}
.kupi_button {
	background-color:#080404;
	-moz-border-radius:4px;
	-webkit-border-radius:4px;
	border-radius:4px;
	border:1px solid #fff5ff;
	display:inline-block;
	cursor:pointer;
	color:#f5e7f5;
	font-family:Arial;
	font-size:12px;
	padding:5px 8px;
	text-decoration:none;
}
.kupi_button:hover {
	background-color:#f70f1a;
  text-decoration: none;

}
.kupi_button:active {
	position:relative;
	top:1px;
}


.korpa_button {
	background-color:#ffffff;
	-moz-border-radius:4px;
	-webkit-border-radius:4px;
	border-radius:4px;
	border:1px solid #dcdcdc;
	display:inline-block;
	cursor:pointer;
	color:black !important;
	font-family:Arial;
	font-size:12px;
	padding:5px 8px;
	text-decoration:none;
  font-weight: bold;
}
.korpa_button:hover {
	background-color: #ffa31a;
  text-decoration: none;
}
.korpa_button:active {
	position:relative;
	top:1px;
}

.slikica{
  width: 250px;
  height: 200px;
}
</style>
