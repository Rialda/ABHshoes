
<div class="container">


  <div class="row">
    <div class="col-md-6 offset-md-3">

      <center><br/><br/><h5> Featured Products </h5> </center>
      <center>
        <div class="btn-group">

  <select class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
      <% for @b in @brands %>
      <option class="caret">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @b.brand_name %></option>
          <% end %>
  </select>
</div>
</center>
</div>
</div>


<div class="row list_of_shoes">
  <div class="col-md-3 offset-md-1">
    <br/> <br/>
 </div>
</div>

<div class="row">
      <% for @i in @images %>
        <% @p=Product.find_by_id(@i.id)%>
        <% @col_img=Color.find_by_id(@p.id)%>
        <% @pcol= Product.find(@p).colors %>
        <% @pcolurl= Color.find_by_id(@pcol) %>

        <div class="col-md-3">
            <%= link_to image_tag(@i.img_1, :class=>"img-responsive shoe_images imgs"), product_path(@p)%>

        </div>
      <% end %>

</div>

<div class="row ">
  <div class="col-md-6 offset-md-3">
    <center>
      <%= will_paginate @images, previous_label: "Nazad", next_label:"Naprijed" %>
  </center>
  </div>
</div>

<!-- Footer -->
<footer>
    <div class="row">
        <div class="col-lg-12">
            <p>Copyright &copy;abhShoes. All rights reserved.</p>
        </div>
    </div>
</footer>

</div>

