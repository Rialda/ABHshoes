<div class="row">

  <div class="col-md-3 offset-md-0">
  <b> FILTER </b>
  </div>

  <div class="col-md-3 category__name">
  <b>  <%=  %> </b>
  </div>

  <div class="col-md-3 offset-md-9">
    <div class="cijena">
      <label for="sel1" class="label1">Cijena:</label>
      <select id="cijena">
        <option value="<%= Product.order(:price) ASC %>">Od vece ka manjoj</option>
        <option value="product.price_DESC=1">Od manje ka vecoj</option>
      </select>
    </div>
    </div>

  </div>

  <div class="row list_of_shoes">
    <div class="col-md-3 offset-md-1">
      <br/> <br/>
   </div>
  </div>


<div class="row">

  <div class="col-md-3">

    <div class="filters">
      <label for="sel2">Brend:</label>
      <select class="form-control" id="sel2">
        <% for @b in @brands %>
        <option><%= @b.brand_name %></option>
            <% end %>
      </select>

    </div>

    <div class="filters">
      <label for="sel2">Velicina:</label>
      <select class="form-control" id="sel2">
        <% for @sz in @sizes %>
        <option><%= @sz.product_size %></option>
        <% end %>
      </select>
    </div>

    <div class="filters">
      <label for="sel2">Boja:</label>
      <select class="form-control" id="sel2">
        <% for @cl in @colors %>
        <option> <%= @cl.color_name %></option>
        <% end %>
      </select>
    </div>

    <div class="filters">
      <label for="sel2">Stil:</label>
      <select class="form-control" id="sel2">
        <% for @ss in @styles %>
        <option><%= @ss.style_name %></option>
        <% end %>
      </select>
    </div>

    <div class="filters">
      <label for="sel2">Cijena:</label>
      <select class="form-control" id="sel2">
        <option><%= link_to '5-41', @products_path, price_min: 5, price_max: 41 %></option>
        <option><%= link_to '41-46', @products_path, price_min: 41, price_max: 46 %></option>
        <option><%= link_to '46-50', @products_path, price_min: 46, price_max: 50 %></option>


      </select>
    </div>

  </div>



  <div class="col-md-9">
    <% for @i in @images %>
      <% @p=Product.find_by_id(@i.id)%>
      <% @col_img=Color.find_by_id(@p.id)%>
      <% @pcol= Product.find(@p).colors %>
      <% @pcolurl= Color.find_by_id(@pcol) %>

      <div class="col-md-3">
          <%= link_to image_tag(@i.img_1, :class=>"img-responsive shoe_images imgs", :title=>@p.category_id), product_path(@p)%>
          <p><%= @p.name %></p> <br/>
          <p id="cijena_proizvoda">$<%= @p.price %></p>
          <% for @pc in @pcol %>
          <img id="boja_proizvoda" src="<%= @pc.color_img %>" title="<%= @pc.color_name %>" />
          <% end %>

      </div>
    <% end %>


    </div>
      </div>


